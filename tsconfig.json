{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "noImplicitAny": false,
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    // "declaration": true,
    // "declarationMap": false,
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false, 
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "rootDir": ".",
    "paths": {}
  },
  "include": [
    "lib/**/*.ts",
  ]
}
